---
import "../styles/global.css";

const title = Astro.props.title;
---
<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="png" href="/Icon-raiz-verde-1.png" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body view-transition class="bg-green-50">
		<slot />
	</body>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
	}
</style>
